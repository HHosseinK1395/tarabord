<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_search_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#222222">

        <ImageView
            android:id="@+id/btn_account_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/previous"/>

        <Components.TextViewFont
            app:customFont="@string/font_default2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/fragment_account_caption"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/btn_account_editinfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/edit"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#ebebeb">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fafafa">

                    <Components.TextViewFont
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_userinfocaption"
                        android:layout_gravity="center"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:textColor="#222222"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Components.EditTextFont
                        android:id="@+id/edt_account_username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:enabled="false"
                        android:text="@string/fragment_account_usernamehint"
                        android:paddingRight="20dp"
                        android:textColor="#000000"
                        android:background="@drawable/button3"
                        android:hint=""
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/me"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fafafa">

                    <Components.TextViewFont
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_callinfocaption"
                        android:layout_gravity="center"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:textColor="#222222"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Components.TextViewFont
                            android:id="@+id/txt_account_phonenumber"
                            app:customFont="@string/font_default2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment_account_phonenumber"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <Components.TextViewFont
                            app:customFont="@string/font_default2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment_account_phonenumberstring"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:textColor="#333333"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/call"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e0e0"></LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Components.TextViewFont
                            android:id="@+id/txt_account_email"
                            app:customFont="@string/font_default2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment_account_email"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <Components.TextViewFont
                            app:customFont="@string/font_default2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment_account_emailstring"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/msginfo"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fafafa">

                    <Components.TextViewFont
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_creditcaption"
                        android:layout_gravity="center"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:textColor="#222222"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Components.ButtonFont
                        android:id="@+id/btn_account_credit"
                        app:customFont="@string/font_default"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="left"
                        android:text="@string/fragment_account_creditbuttoncaption"
                        android:background="@drawable/button1"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="#ffffff"/>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"/>

                        <Components.TextViewFont
                            app:customFont="@string/font_default2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/fragment_account_creditstring"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="#333333"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/creditinfo"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <Components.TextViewFont
                        android:id="@+id/txt_account_maalihistory"
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_turnoverstring"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:textColor="#333333"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/history"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#fafafa">

                    <Components.TextViewFont
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_exitcaption"
                        android:layout_gravity="center"
                        android:gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:textColor="#222222"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnr_account_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Components.TextViewFont
                        android:id="@+id/txt_account_exit"
                        app:customFont="@string/font_default2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fragment_account_exitstring"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:textColor="#333333"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/exitaccount"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>