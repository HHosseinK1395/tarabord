<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_search_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_credit_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/previous" />


        <Components.TextViewFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/payment_activity_toolbar"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:customFont="@string/font_default2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_credit_ok_increase"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:src="@drawable/ic_add"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="45sp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="3dp"
                    app:customFont="@string/font_default" />

            </RelativeLayout>

            <Components.TextViewFont
                android:id="@+id/txt_credit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="مبلغ قابل پرداخت"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                app:customFont="@string/font_default2" />

            <Components.TextViewFont
                android:id="@+id/txt_credit_amount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/payment_activity_amount"
                android:textColor="#000000"
                android:textSize="40sp"
                app:customFont="@string/font_default2" />

            <Components.TextViewFont
                android:id="@+id/txt_credit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="بابت عوارضی ورودی پردیس"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                app:customFont="@string/font_default2" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#bbbbbb">

            </LinearLayout>

            <Components.ButtonFont
                android:id="@+id/btn_pay"
                app:customFont="@string/font_default"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/shape_button_enable"
                android:text="@string/payment_activity_toolbar"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>